<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:fillViewport="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/back"
    >

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout

                android:id="@+id/edit_lin"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/suosuoda1"/>

                <EditText

                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:id="@+id/edit_edit"

                    android:layout_width="380dp"
                    android:layout_height="50dp"
                    android:hint="请输入城市名"
                    />
                <LinearLayout

                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:onClick="sousuo"
                    android:background="@drawable/border">
                    <ImageView

                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/sousu"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搜索"
                        android:textColor="#ffff"
                        android:textSize="18dp"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/linadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="5dp">

                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="tj"
                    android:background="@drawable/add2"
                    android:textColor="#ffff"
                    />

                <TextView
                    android:id="@+id/edit_text"
                    android:layout_marginLeft="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="搜素中。。"
                    android:textColor="#ffffff"
                    android:textSize="25dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--当天天气-->
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <TextView
            android:id="@+id/edit_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="20°"
            android:textSize="60dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp">



            <TextView
                android:id="@+id/edit_wind_direction"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="风向：东南"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_wind_strength"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="风速：3级"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_humidity"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="湿度：30%"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_time"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="14:00更新"
                android:textSize="10dp"

                />
        </LinearLayout>
    </LinearLayout>

    <!--详细天气情况-->
    <LinearLayout
        android:id="@+id/line2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="15dp">

        <TextView
            android:id="@+id/edit_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日温度："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/edit_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日天气："
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edit_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向风速："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/edit_dressing_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="穿衣建议："
            android:textSize="13dp" />

    </LinearLayout>



    <ListView
        android:id="@+id/lv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
</ScrollView>