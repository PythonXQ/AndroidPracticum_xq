<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:fillViewport="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6a80a0ff"
    android:id="@+id/back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#6f002966">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/edit_lin"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:textSize="20dp"
                    android:id="@+id/edit_edit"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入城市名"
                    />
                <Button
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/search_48px"
                    android:onClick="sousuo"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/edit_text"
                android:layout_marginLeft="180dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="搜素中。。"
                android:textColor="#ffffff"
                android:textSize="25dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--当天天气-->
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6f002966"
        >


        <TextView
            android:id="@+id/edit_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="20°"
            android:textSize="60dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp">



            <TextView
                android:id="@+id/edit_wind_direction"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="风向：东南"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_wind_strength"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="风速：3级"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_humidity"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="湿度：30%"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/edit_time"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="14:00更新"
                android:textSize="10dp"

                />
        </LinearLayout>
    </LinearLayout>

    <!--详细天气情况-->
    <LinearLayout
        android:id="@+id/line2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7b002966"
        android:orientation="vertical"

        android:padding="15dp">

        <TextView
            android:id="@+id/edit_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日温度："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/edit_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日天气："
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edit_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向风速："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/edit_dressing_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="穿衣建议："
            android:textSize="13dp" />

    </LinearLayout>



    <ListView
        android:id="@+id/lv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
</ScrollView>